<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/toast_background" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/textView_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingBottom="@dimen/space_std_h"
        android:paddingLeft="@dimen/space_std_w"
        android:paddingRight="@dimen/space_std_w"
        android:paddingTop="@dimen/space_std_h"
        android:text="TextView"
        android:textAppearance="@style/txt_dialog_txt" />

</LinearLayout>