<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/space_std_h"
    android:layout_marginTop="@dimen/space_std_h"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_std_h"
    android:paddingTop="@dimen/space_std_h" >

    <ImageView
        android:id="@+id/imageView_connect_dev_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_std_w"
        android:src="@drawable/raspi32" />

    <TextView
        android:id="@+id/textView_connect_dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_std_w"
        android:layout_marginRight="@dimen/space_std_w"
        android:layout_toRightOf="@id/imageView_connect_dev_type"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imageView_connect_dev_connected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/space_std_w"
        android:layout_toRightOf="@id/textView_connect_dev"
        android:src="@android:drawable/star_big_on" />

</RelativeLayout>